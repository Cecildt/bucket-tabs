  <body>
    <h1>Sleeping Tab</h1>
    <h2>Click anywhere to reload the orginal web page.</h2>
    <p id="page-url"></p>
    <script>
      const currentPageUrl = window.location.href;
      console.log(currentPageUrl);
      let pageUrl = document.getElementById('page-url');

      if (pageUrl) pageUrl.textContent = currentPageUrl;

      const queryString = window.location.search;
      const urlParams = new URLSearchParams(queryString);
      const title = urlParams.get('bt-title');
      if (title) {
        document.title = 'Sleeping - ' + title;
      }

      document.addEventListener('click', () => {
        const currentPageUrl = window.location.href;
        let idx = currentPageUrl.indexOf('bt-url');
        if (idx > -1) {
          let url = currentPageUrl.substring(idx+7);
          window.location.href = url;
        }

      });
    </script>
